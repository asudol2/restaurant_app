<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="60dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/recycler_item_background_ripple"
    android:elevation="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="8dp">

        <ImageView
            android:id="@+id/image_view_dishes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description_dish_image" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text_view_dishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="Coca-Cola"
        android:textAllCaps="false"
        android:textColor="@color/design_default_color_on_secondary"
        android:textAlignment="center" />

</LinearLayout>